{
  "name": "x-gpt",
  "version": "0.1.0",
  "description": "AI-powered Twitter/X scraping and question-answering tool",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "xgpt": "./src/cli.ts"
  },
  "scripts": {
    "postinstall": "bun run scripts/patch-twitter-scraper.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "dev": "bun run src/cli.ts serve",
    "serve": "bun run src/cli.ts serve",
    "build": "bun build src/cli.ts --outdir ./dist --target bun",
    "start": "bun run src/cli.ts",
    "cli": "bun run src/cli.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun run test-modules.ts",
    "test:modules": "bun run test-modules.ts",
    "test:basic": "bun run test-basic.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:smoke": "bun test tests/smoke.test.ts",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun test tests/e2e",
    "test:quick": "bun run test:modules",
    "test:all": "bun run tests/run-all-tests.ts",
    "test:ci": "bun run test:modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/cli-progress": "^3.11.6",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "typescript-eslint": "^8.51.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@elysiajs/html": "^1.4.0",
    "@inquirer/prompts": "^7.10.1",
    "@sinclair/typebox": "0.34",
    "@the-convocation/twitter-scraper": "^0.21.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.19",
    "openai": "^5.23.2"
  }
}